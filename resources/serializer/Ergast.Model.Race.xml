<?xml version="1.0" encoding="utf-8"?>
<serializer>
    <class name="Ergast\Model\Race">
        <xml-namespace uri="http://ergast.com/mrd/1.4"/>
        <property name="season" type="integer" serialized-name="season" xml-attribute="true"/>
        <property name="round" type="integer" serialized-name="round" xml-attribute="true"/>
        <property name="name" type="string" serialized-name="RaceName"/>
        <property name="circuit" type="Ergast\Model\Circuit" serialized-name="Circuit"/>
        <property name="date" serialized-name="Date">
            <type><![CDATA[DateTime<'Y-m-d|'>]]></type>
        </property>
        <property name="time" serialized-name="Time">
            <type><![CDATA[DateTime<'H:i:sT|'>]]></type>
        </property>
        <property name="url" type="string" serialized-name="url" xml-attribute="true"/>
        <property name="qualifying" serialized-name="QualifyingList">
            <type><![CDATA[ArrayCollection<Ergast\Model\Qualifying>]]></type>
            <xml-list entry-name="QualifyingResult"/>
        </property>
        <property name="results" serialized-name="ResultsList">
            <type><![CDATA[ArrayCollection<Ergast\Model\Result>]]></type>
            <xml-list entry-name="Result"/>
        </property>
        <property name="laps" serialized-name="LapsList">
            <type><![CDATA[ArrayCollection<Ergast\Model\Lap>]]></type>
            <xml-list entry-name="Lap"/>
        </property>
        <property name="pitStops" serialized-name="PitStopsList">
            <type><![CDATA[ArrayCollection<Ergast\Model\PitStop>]]></type>
            <xml-list entry-name="PitStop"/>
        </property>
    </class>
</serializer>

